@using StokUygulamasıMVC.Models.Entity;

@model List<MUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index","Musteri",FormMethod.Get))
{
    <p>
        <b>Musteri ara :</b>@Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </p>

}

<table class="table table-border">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.MUSTERIID</th>
                <td>@item.MUSTERIAD</td>
                <td>@item.MUSTERISOYAD</td>
                <td>
                    <form method="post" action="@Url.Action("Sil","Musteri",new {id=item.MUSTERIID})" onsubmit="return confirm('@item.MUSTERIAD Müşterisi Silinecek onaylıyor musunuz  ?')">
                        <button type="submit" class="btn btn-warning">SİL</button>
                    </form>
                </td>
                <td><a href="Musteri/MusteriGetir/@item.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMüsteri" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>

